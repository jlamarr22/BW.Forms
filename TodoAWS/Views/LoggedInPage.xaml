<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="TodoAWSSimpleDB.LoggedInPage" Title="Welcome
             ">
  <ContentPage.Resources>
    <ResourceDictionary>
      <Style x:Key="labelUsername" TargetType="Label">
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="CenterAndExpand" />
        <Setter Property="VerticalTextAlignment" Value="Center"></Setter>
        <Setter Property="FontSize" Value="Large" />
      </Style>
      <Style x:Key="userImage" TargetType="Image">
        <Setter Property="Aspect" Value="AspectFit"/>
        <Setter Property="HorizontalOptions" Value="EndAndExpand"></Setter>
      </Style>
    </ResourceDictionary>
  </ContentPage.Resources>
  <StackLayout Margin="20" VerticalOptions="StartAndExpand" Orientation="Vertical">
    <Label x:Name="Username" Style="{StaticResource labelUsername}" />
    <Image x:Name="Picture" Style="{StaticResource userImage}" />
  </StackLayout>
</ContentPage>